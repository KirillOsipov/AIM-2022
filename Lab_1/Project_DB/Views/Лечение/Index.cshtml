@model IEnumerable<OsipovCourseWork.Models.Лечение>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int n = 0;
}

<h2>Лечение</h2>

<p>
    @Html.ActionLink("Создать", "Create")
</p>
<table class="table">
    <tr>
        <th>
            №
        </th>
        <th>
            Дата начала
        </th>
        <th>
            Дата окончания
        </th>
        <th>
            Цена
        </th>
        <th>
            Лекарственный препарат
        </th>
        <th>
            ИД врача
        </th>
        <th>
            ИД оборудования
        </th>
        <th>
            Номер медкарты пациента
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @{ n++; @n; }
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ДатаНачала)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ДатаОкончания)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Цена)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ЛекарственныеПрепараты.НазваниеПрепарата)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.МедицинскийПерсонал.ИД)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Оборудование.ИД_Оборудования)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Пациенты.НомерМедКарты)
        </td>
        <td>
            @Html.ActionLink("Детали", "Details", new { id = item.ИД_Лечения }) | 
            @Html.ActionLink("Удалить", "Delete", new { id = item.ИД_Лечения }) | 
            @Html.ActionLink("Редактировать", "Edit", new { id = item.ИД_Лечения })
        </td>
    </tr>
}

</table>
